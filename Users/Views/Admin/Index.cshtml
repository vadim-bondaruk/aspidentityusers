@using Users.Models
@model ICollection<Users.Models.AppUser>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Учетные записи
    </div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Нет ни одной записи</td>
            </tr>
        }
        else
        {
            foreach (AppUser item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                </tr>
            }
        }
    </table> 
</div>
@Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-primary" })